{% if end_date != blank %}

    <div class="countdown-timer">
      <div class="time-block">
        <span class="time-block__num js-timer-days">00</span>
        <span class="time-block__unit">Days</span>
      </div>
      <span class="time-colon">:</span>
      <div class="time-block">
        <span class="time-block__num js-timer-hours">00</span>
        <span class="time-block__unit">Hours</span>
      </div>
      <span class="time-colon">:</span>
      <div class="time-block">
        <span class="time-block__num js-timer-minutes">00</span>
        <span class="time-block__unit">Mins</span>
      </div>
      <span class="time-colon">:</span>
      <div class="time-block">
        <span class="time-block__num js-timer-seconds">00</span>
        <span class="time-block__unit">Seconds</span>
      </div>
    </div>

    <style>
      .countdown-timer {
      display: flex;
      justify-content: center;
      align-items: center;
      column-gap: 18px;
      }
      .time-block {
        position: relative;
        background: #FFFFFF;
        border-radius: 12px;
        padding-top: 33px;
        padding-bottom: 33px;
        padding-left: 22px;
        padding-right: 22px;
        flex-grow: 1;
        flex-basis: 0;
      }
      .time-block__num,
      .time-block__unit {
        display: block;
        text-align: center;
      }
      .time-block__num {
        font-family: 'Gotham-Medium';
        font-size: 52px;
        line-height: 1;
        color: #000000;
      }
      .time-block__unit {
        position: absolute;
        transform: translate(-50%, -50%);
        left: 50%;
        bottom: 10px;
        font-family: 'Gotham-Medium';
        font-size: 10px;
        line-height: 1;
        color: #000000;
        text-transform: uppercase;
      }
      .time-colon {
        font-family: 'Gotham-Medium';
        font-size: 52px;
        color: #FFFFFF;
      }
      @media (max-width: 1200px) {
        .time-block {
          padding-top: 33px;
          padding-bottom: 33px;
          padding-left: 12px;
          padding-right: 12px;
        }
        .time-block__num {
        font-size: 33px;
        }
        .time-colon {
        font-size: 33px;
        }
      }
      @media (max-width: 1023px) {
        .time-block {
          padding-top: 23px;
          padding-bottom: 23px;
        }
      }
      @media (max-width: 850px) {
        .time-block {
        padding-left: 10px;
        padding-right: 10px;
        padding-top: 13px;
        padding-bottom: 13px;
        flex-grow: 0;
        }
        .time-block__num {
          font-size: 26px;
        }
        .time-block__unit {
          font-size: 5px;
          bottom: 5px;
        }
        .time-colon {
          font-size: 25px;
        }
        .countdown-timer {
          column-gap: 10px;
        }
      }

      </style>

  <script type="text/javascript">

    var second = 1000,
        minute = second * 60,
        hour = minute * 60,
        day = hour * 24;

    var countDown = new Date('{{- end_date -}}').getTime(),

        x = setInterval(function() {

        var now      = new Date().getTime(),
            distance = countDown - now,
            days     = Math.floor(distance / (day)),
            hours    = Math.floor((distance % (day)) / (hour)),
            minutes  = Math.floor((distance % (hour)) / (minute)),
            seconds  = Math.floor((distance % (minute)) / second);

      document.querySelector('.js-timer-days').innerText = ('0' + days).slice(-2),
      document.querySelector('.js-timer-hours').innerText = ('0' + hours).slice(-2),
      document.querySelector('.js-timer-minutes').innerText = ('0' + minutes).slice(-2),
      document.querySelector('.js-timer-seconds').innerText = ('0' + seconds).slice(-2);

      if (distance < 0) {
          document.querySelector('.js-timer-days').innerText = "00";
          document.querySelector('.js-timer-hours').innerText = "00";
          document.querySelector('.js-timer-minutes').innerText = "00";
          document.querySelector('.js-timer-seconds').innerText = "00";
          clearInterval(x);
        }
      }, second)

  </script>

  {% endif %}