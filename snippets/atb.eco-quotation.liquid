{% comment %}
ATB-SCHEMA{
  "name": "Quotes",
  "id": "eco-quotation",
  "banner": "",
  "icon": "",
  "tags": "",
  "description": "",
  "class": "",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID",
      "info": "Enter a unique ID with only letters and numbers, no spaces",
      "default": ""
    },
    {
      "type": "text",
      "id": "blocks",
      "label": "Block ID",
      "info": "Enter a unique ID with only letters and numbers, no spaces",
      "default": "",
      "repeatable": "quote"
    },
    {
      "id": "block_company_logo",
      "type": "image_picker",
      "label": "Background image",
      "info": "180x100 recommended",
      "repeatable": "quote"
    },
    {
      "id": "block_quote",
      "type": "text",
      "label": "Quote",
      "default": "EcoFlow DELTA will even top-up a Tesla, putting an extra five miles between you and the marauding zombies of the apocalypse.",
