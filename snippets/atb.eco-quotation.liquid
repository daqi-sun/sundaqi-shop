      "info": ""
    },
    {
      "id": "block_company_info",
      "type": "text",
      "label": "Info",
      "default": "From Forbes. Â© 2020 Forbes. Used under license.",
      "repeatable": "quote",
      "info": ""
    }
  ],
  "warnings": [
    "repeating image fields may not be properly handled"
  ]
}ATB-SCHEMA
{% endcomment %}


{%- include 'atb-render' field:'section_id' -%}
{%- assign section_id = val -%}
{%- include 'atb-render' field:'blocks' -%}
{%- assign blocks = val -%}
{%- include 'atb-render' field:'block_company_logo' -%}
{%- assign block_company_logo = val -%}
{%- include 'atb-render' field:'block_quote' -%}
{%- assign block_quote = val -%}
{%- include 'atb-render' field:'block_company_info' -%}
{%- assign block_company_info = val -%}
