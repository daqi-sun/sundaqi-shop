{%- liquid
    assign variant = product.selected_or_first_available_variant
    assign compare_at_price = variant.compare_at_price | money
    assign money_price = variant.price | money
  -%}

  {% assign on_sale = false %}
  {% if variant.compare_at_price > variant.price %}
    {% assign on_sale = true %}
  {% endif %}
  {% if is_pc %}
  <p id="h3" class="pb-3 m-0 nodisplay">{{money_price}}
  </p>
  {% else %}
  <p style="font-size: 20px;font-weight: bold;">{{ money_price }}
  </p>
  {% endif %}