{% comment %}
ATB-SCHEMA{
"name": "EFWA Intro RL",
"id": "efwa-intro-rl",
"banner": "",
"icon": "",
"tags": "",
"description": "",
"class": "efwa-intro-rl",
"settings": [
{
"type": "text",
"id": "section_id",
"label": "Section ID",
"info": "Enter a unique ID with only letters and numbers, no spaces",
"default": ""
},
{
"type": "checkbox",
"id": "atb_enable_checkbox",
"label": "Enable section",
"default": true,
"info": ""
},
{
"id": "block_subtitle",
"type": "text",
"label": "Subtitle",
"default": "Product Intro Subtitle",
"repeatable": "section",
"info": ""
},
{
"id": "block_title",
"type": "text",
"label": "Title",
"default": "Product Intro Title",
"repeatable": "section",
"info": ""
},
{
"id": "block_description",
"type": "text",
"label": "description",
"default": "Product Intro Description",
"repeatable": "section",
"info": ""
},
{
"type": "text",
"id": "blocks",
"label": "Block ID",
"info": "Enter a unique ID with only letters and numbers, no spaces",
"default": "",
"repeatable": "section"
},
{
"id": "block_img_link",
"type": "image_picker",
"label": "Select Image",
"repeatable": "section",
"info": ""
},
{
"id": "block_img_link_mobile",
"type": "image_picker",
"label": "Select Image Mobile",
"repeatable": "section",
"info": ""
}
],
"warnings": [
"repeating image fields may not be properly handled"
]
}ATB-SCHEMA
{% endcomment %}
{%- include 'atb-render' field:'section_id' -%}
{%- assign section_id = val -%}
{%- include 'atb-render' field:'atb_enable_checkbox' -%}
{%- assign atb_enable_checkbox = val -%}
{%- include 'atb-render' field:'block_title' -%}
{%- assign block_title = val -%}
{%- include 'atb-render' field:'block_subtitle' -%}
{%- assign block_subtitle = val -%}
{%- include 'atb-render' field:'blocks' -%}
{%- assign blocks = val -%}
{%- include 'atb-render' field:'block_img_link' -%}
{%- assign block_img_link = val -%}
{%- include 'atb-render' field:'block_img_link_mobile' -%}
{%- assign block_img_link_mobile = val -%}
{%- include 'atb-render' field:'block_description' -%}
{%- assign block_description = val -%}
{%- if atb_enable_checkbox == blank -%}
{%- assign atb_enable_checkbox = false -%}
{%- else -%}
{%- assign atb_enable_checkbox = true -%}
{%- endif -%}
{%- assign no_image = images['no_image_comparison'] -%}
<section id="shopify-section-{{section_id}}" class="shopify-section efwa-section">
	{% if atb_enable_checkbox %}
	<section class="efwa-intro-rl" id="efwa-intro-rl">
		<div class="efwa-page-80">
			{% for block0 in blocks %}
			<div class="efwa-container efwa-container-column">
				{%- assign my_image_key1 = block_img_link_mobile[forloop.index0]| split: '/files/' | last -%}
				{%- assign my_image1 = images[my_image_key1] -%}
				{%- assign my_image_key0 = block_img_link[forloop.index0]| split: '/files/' | last -%}
				{%- assign my_image0 = images[my_image_key0] -%}
				<div class="efwa-column">
					<img class="lazyload desktop-image" data-src="{{ my_image0 | img_url: '1800x' }}">
					<img class="lazyload mobile-image" data-src="{{ my_image1 | img_url: '1200x' }}">
				</div>
				<div class="efwa-column">
					<h3 class="efwa-subtitle">{{block_subtitle[forloop.index0]}}</h3>
					<h2 class="efwa-title">{{block_title[forloop.index0]}}</h2>
					<p class="efwa-description">{{block_description[forloop.index0]}}</p>
				</div>
			</div>
			{% endfor %}
		</div>
	</section>
	{% endif %}
	<style>
	</style>
	<script type="application/javascript">
	</script>
</section>