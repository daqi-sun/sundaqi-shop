<section id="shopify-section-{{section_id}}" class="shopify-section index-section featured-blog-section">

 {%- assign blog = blogs[atb_blog] -%}

{% assign enable_carousel = atb_enable_carousel %}

{% assign disabled_desktop_slider = false %}

{% if blog.handle  != blank %}
{% if  blog.articles.size <= atb_blogs_per_row   %}
{% assign disabled_desktop_slider = true %}
{% endif %}
{% else %}
{% if atb_post_limit == atb_blogs_per_row %}
{% assign disabled_desktop_slider = true %}
{% endif %}
{% endif %}
 

 {%- capture flickity_options -%}
      {
      "prevNextButtons": false,
      "wrapAround": true,
      "dragThreshold": 15,
      "cellAlign": "left",
      "pauseAutoPlayOnHover": true,
      "autoPlay": {% if atb_enable_autoplay %}{{ atb_cycle_speed | times: 1000 }}{% else %}false{% endif %},
      "pageDots": {% if atb_show_dots %}true{% else %}false{% endif %},
    	"watchCSS" : {% if disabled_desktop_slider %}true{% else %}false{% endif %}
      }
    {%- endcapture -%}
    

{% capture placeholder_article %}
  <article class='article_block' aria-labelledby="FeaturedBlogTitle-{{ forloop.index0 }}-{{ section_id }}">

    <a href="#" class="article__link">
      <div  class="article__grid-image-wrapper js">
        <div class="article__grid-image-container"  data-image-loading-animation>
          {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
          {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg zoom-fade-animation-element' }}
        </div>
      </div>
    </a> 

    <div class='article_block_info'>


      {% if atb_blog_show_author %}
      <span class="article__author text_name">
        {{ 'homepage.onboarding.blog_author' | t }}
      </span>   
      {% endif %}

      <h4 class="article__title" id="FeaturedBlogTitle-{{ forloop.index0 }}-{{ section_id }}">
        {{ 'homepage.onboarding.blog_title' | t }}
      </h4>

      <div class="article__grid-meta">
        {% if atb_blog_show_date %}
        <span class="article__date">
          {{ 'now' | date: "%s"  | time_tag: format: 'date' }}
        </span>
        {% endif %}

        {% if blog.comments_enabled? and article.comments_count > 0 %}
        <div class='article__comment_info'>
          <a href="#" class="article__comment-count">
            {{ 'blogs.comments.comments_with_count' | t: 0 }}
          </a>
        </div>
        {% endif %}

      </div>

    </div>
  </article>
{% endcapture %}




<section id="section-{{ section_id }}" data-section-id="{{ section_id }}" data-section-type="featured-blog" class="">
  <div class="page-width">
    {% if atb_title != blank  or atb_subtitle != blank %}
    <header class="section-header text-center {% if disabled_desktop_slider %} disabled_desktop_slider {% endif %} homepage_subtitle_style_{{settings.homepage_subtitle_color}}">
      {% if atb_subtitle != blank %}
      <span class='h5'>{{ atb_subtitle  }}</span>
      {% endif %}
      {% if atb_title != blank %}
      <h2>{{ atb_title | escape }}</h2>
      {% endif %}


      {% if atb_show_arrows and enable_carousel %}
        <div class='slider_custom_arrows'>
          <a href="javascript:void(0)" id='button_prev_{{section_id}}' class='button-prev btn btn--circle-arrow' aria-label="Previous" aria-describedby="button previous">
            {% include 'atb-icon'  with 'tail-left'  %}
          </a>
          <a href="javascript:void(0)" id='button_next_{{section_id}}' class='button-next btn btn--circle-arrow' aria-label="Next" aria-describedby="button next">
            {% include 'atb-icon'  with 'tail-right'  %}
          </a>
        </div>
      {% endif %}

    </header>
    {% endif %}

   

 
    {% case atb_blogs_per_row %}
    {% when 2 %}
    {%- assign grid_item_width = 'medium-up--one-half' -%}
    {% when 3 %}
    {%- assign grid_item_width = 'medium-up--one-third' -%}
    {% when 4 %}
    {%- assign grid_item_width = 'medium-up--one-quarter' -%}
    {% when 5 %}
    {%- assign grid_item_width = 'medium-up--one-fifth' -%}
    {% endcase %}


    {% unless blog.articles_count == 0 or atb_blog == blank %}
    {% if enable_carousel %}
    <div class='zoom-fade-animation featured-blog__slider {% if disabled_desktop_slider %} disabled_desktop_slider {% endif %}' data-flickity-config='{{ flickity_options }}'>
      {% for article in blog.articles limit: atb_post_limit %}
      <div class="zoom-fade-animation-element-wrapper featured-blog__slide {{grid_item_width}}">
        <article class='article_block' aria-labelledby="FeaturedBlogTitle-{{ forloop.index0 }}-{{ section_id }}">
        
            <a href="{{ article.url }}" class="article__link">
              {% if article.image %}
              {% capture img_id %}ArticleImage-{{ article.image.id }}{% endcapture %}
              {% capture img_wrapper_id %}ArticleImageWrapper-{{ article.image.id }}{% endcapture %}

             
              <div id="{{ img_wrapper_id }}" class="article__grid-image-wrapper js">
                <div class="article__grid-image-container">
                  <img id="{{ img_id }}"
                       class="article__grid-image zoom-fade-animation-element"
                       srcset="{%- if article.image.width >= 375 -%}{{ article.image | img_url: '375x' }} 375w,{%- endif -%}
                               {%- if article.image.width >= 720 -%}{{ article.image | img_url: '720x' }} 750w,{%- endif -%}
                               {%- if article.image.width >= 1066 -%}{{ article.image | img_url: '1066x' }} 1066w,{%- endif -%}
                               {%- if article.image.width >= 1500 -%}{{ article.image | img_url: '1500x' }} 1500w,{%- endif -%}
                               {%- if article.image.width >= 1780 and atb_blogs_per_row < 4 -%}{{ article.image | img_url: '1780x' }} 1780w,{%- endif -%}
                               {%- if article.image.width >= 2000 and atb_blogs_per_row < 3 -%}{{ article.image | img_url: '2000x' }} 2000w{%- endif -%}"
                       src="{{ article.image | img_url: '535x' }}"
                       sizes="(min-width: 750px) calc(100vw / {{ atb_blogs_per_row }}), 100vw"
                       loading="lazy"
                       width="{{ article.image.width }}"
                       height="{{ article.image.height }}"
                       alt="{{article.image.alt | default: article.title }}">
                   {% render 'load_spinner' %}
                </div>
              </div>
              <noscript>
                <div class="article__grid-image-wrapper">
                  {{ article | img_url: '345x345', scale: 2 | img_tag: article.title, 'article__grid-image' }}
                </div>
              </noscript>
              {% endif %}

            </a> 

          <div class='article_block_info'>
   
          
            {% if atb_blog_show_author %}
            {% assign original_author_name = article.author %}

            {% for i in (1..3) %}
            {% capture custom_author_name_handle %}author_name_{{i}}{% endcapture %}
            {% capture custom_author_logo_handle %}author_logo_{{i}}{% endcapture %}
            {% capture custom_author_biography_handle %}author_biography_{{i}}{% endcapture %}

            {% assign author_name = settings[custom_author_name_handle] %}
            {% assign author_logo = settings[custom_author_logo_handle] %}
            {% assign author_biography = settings[custom_author_biography_handle] %}

            {% if author_name == original_author_name %}

            <span class="article__author {% if author_logo == blank %} text_name {% endif %}">
              {% if author_logo != blank %}
              <img src='{{ author_logo | img_url:"150x" }}' 
                   alt='{{article.author}}'
                   srcset="{{ author_logo | img_url: '150x' }} 1x, {{ author_logo | img_url: '150x', scale: 2 }} 2x"
                   loading="lazy"
                   width="{{author_logo.width}}"
                   height="{{author_logo.height}}"/>
              {% else %}
              {{ 'blogs.article.by_author' | t: author: article.author }}
              {% endif %}
            </span>   


            {% break %}
            {% endif %}
            {% endfor %}
            {% endif %}
            
            

            <h4 class="article__title" id="FeaturedBlogTitle-{{ forloop.index0 }}-{{ section_id }}">
              {{ article.title }}
            </h4>

            <div class="article__grid-meta">
              {% if atb_blog_show_date %}
              <span class="article__date">
                {{ article.published_at | time_tag: format: 'date' }}
              </span>
              {% endif %}

              {% if blog.comments_enabled? and article.comments_count > 0 %}
              <div class='article__comment_info'>
                <a href="{{ article.url }}#comments" class="article__comment-count">
                  {{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}
                </a>
              </div>
              {% endif %}

            </div>

          </div>
        </article>
      </div>
      {% endfor %}
    </div>
    {% else %}
    <ul class="zoom-fade-animation grid grid--uniform grid--blog">
      {% for article in blog.articles limit: atb_post_limit %}
      <li class="grid__item {{grid_item_width}} zoom-fade-animation-element-wrapper">
        <article class='article_block' aria-labelledby="FeaturedBlogTitle-{{ forloop.index0 }}-{{ section_id }}">
            <a href="{{ article.url }}" class="article__link">
              {% if article.image %}
              {% capture img_id %}ArticleImage-{{ article.image.id }}{% endcapture %}
              {% capture img_wrapper_id %}ArticleImageWrapper-{{ article.image.id }}{% endcapture %}

             
              <div id="{{ img_wrapper_id }}" class="article__grid-image-wrapper js">
                <div class="article__grid-image-container">
                  <img id="{{ img_id }}"
                       class="article__grid-image zoom-fade-animation-element" 
                       srcset="{%- if article.image.width >= 375 -%}{{ article.image | img_url: '375x' }} 375w,{%- endif -%}
                               {%- if article.image.width >= 720 -%}{{ article.image | img_url: '720x' }} 750w,{%- endif -%}
                               {%- if article.image.width >= 1066 -%}{{ article.image | img_url: '1066x' }} 1066w,{%- endif -%}
                               {%- if article.image.width >= 1500 -%}{{ article.image | img_url: '1500x' }} 1500w,{%- endif -%}
                               {%- if article.image.width >= 1780 and atb_blogs_per_row < 4 -%}{{ article.image | img_url: '1780x' }} 1780w,{%- endif -%}
                               {%- if article.image.width >= 2000 and atb_blogs_per_row < 3 -%}{{ article.image | img_url: '2000x' }} 2000w{%- endif -%}"
                       src="{{ article.image | img_url: '535x' }}"
                       sizes="(min-width: 750px) calc(100vw / {{ atb_blogs_per_row }}), 100vw"
                       loading="lazy"
                       width="{{ article.image.width }}"
                       height="{{ article.image.height }}"
                       alt="{{article.image.alt}}">
                   {% render 'load_spinner' %}
                </div>
              </div>
              <noscript>
                <div class="article__grid-image-wrapper">
                  {{ article | img_url: '345x345', scale: 2 | img_tag: article.title, 'article__grid-image' }}
                </div>
              </noscript>
              {% endif %}

            
            </a>
          
           <div class='article_block_info'>
             
             
             {% if atb_blog_show_author %}
             {% assign original_author_name = article.author %}

             {% for i in (1..3) %}
             {% capture custom_author_name_handle %}author_name_{{i}}{% endcapture %}
             {% capture custom_author_logo_handle %}author_logo_{{i}}{% endcapture %}
             {% capture custom_author_biography_handle %}author_biography_{{i}}{% endcapture %}

             {% assign author_name = settings[custom_author_name_handle] %}
             {% assign author_logo = settings[custom_author_logo_handle] %}
             {% assign author_biography = settings[custom_author_biography_handle] %}

             {% if author_name == original_author_name %}

            <span class="article__author {% if author_logo == blank %} text_name {% endif %}">
               {% if author_logo != blank %}
               <img src='{{ author_logo | img_url:"150x" }}'
                    alt='{{article.author}}'
                    srcset="{{ author_logo | img_url: '150x' }} 1x, {{ author_logo | img_url: '150x', scale: 2 }} 2x"
                    loading="lazy"
                    width="{{author_logo.width}}"
                    height="{{author_logo.height}}"/>
               {% else %}
               {{ 'blogs.article.by_author' | t: author: article.author }}
               {% endif %}
             </span>   


             {% break %}
             {% endif %}
             {% endfor %}
             {% endif %}
            

               <span class="article__title h4" id="FeaturedBlogTitle-{{ forloop.index0 }}-{{ section_id }}">
                {{ article.title }}
             </span>
             
          

            <div class="article__grid-meta">
              {% if atb_blog_show_date %}
              <span class="article__date">
                {{ article.published_at | time_tag: format: 'date' }}
              </span>
              {% endif %}

              {% if blog.comments_enabled? and article.comments_count > 0 %}
              <div class='article__comment_info'>
                <a href="{{ article.url }}#comments" class="article__comment-count">
                  {{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}
                </a>
              </div>
              {% endif %}

            </div>
          </div>
        </article>
      </li>
      {% endfor %}
    </ul>
    {% endif %}
    {% else %}
    {% if enable_carousel %}
    
    <div class="zoom-fade-animation featured-blog__slider {% if disabled_desktop_slider %} disabled_desktop_slider {% endif %}" data-flickity-config='{{ flickity_options }}'>
      {% for i in (1..atb_post_limit) %}
      <div class="zoom-fade-animation-element-wrapper featured-blog__slide {{grid_item_width}}">
        {{ placeholder_article }}
      </div>
      {% endfor %}
    </div>
    {% else %}
    <div class="zoom-fade-animation grid grid--uniform grid--blog">
      {% for i in (1..atb_post_limit) %}
      <li class="zoom-fade-animation-element-wrapper grid__item {{grid_item_width}}">
        {{ placeholder_article }}
      </li>
      {% endfor %}
    </div>
    {% endif %}
    {% endunless %}

    {% if atb_show_view_all and atb_button_text != blank %}
    <div class="text-center">
      <a href="{{ blog.url }}" class="btn btn--{{atb_button_style}}" aria-label="{{ 'blogs.article.view_all_blogs' | t }}">
        <span>{{ atb_button_text }}</span>
        {% include 'atb-icon'  with 'tail-right'  %}
      </a>
    </div>
    {% endif %}
  </div>
</section>



</section>