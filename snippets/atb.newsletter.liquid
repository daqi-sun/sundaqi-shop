  {% endif %}
  
  #shopify-section-{{ section_id }} .Form__Input  {
    background-color: var(--color-body);
      }
  @media only screen and (min-width: 750px) {
    #shopify-section-{{ section_id }} {
    	padding-top:55px;
      margin-bottom:55px;
    }
  }
</style>
{% endif %}
{% if removeBottomMargin %}
<style>
  #shopify-section-{{ section_id }} {
    margin-bottom:0;
  }
</style>
  {% endif %}



</section>