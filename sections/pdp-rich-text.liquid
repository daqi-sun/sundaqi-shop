<section id="{{ section.id }}" class="pdp pdp-rich-text">
    <div class="pdp-container content-align__{{ section.settings.alignment }}" id="{{ section.settings.section_id }}">
        {% if section.settings.title != blank %}
            <h1>{{ section.settings.title }}</h1>
        {% endif %}
        {% if section.settings.subtitle != blank %}
            <div class="subtitle">{{ section.settings.subtitle }}</div>
        {% endif %}
        {% if section.settings.content != blank %}
            <div class="content">{{ section.settings.content }}</div>
        {% endif %}
        {% if section.settings.button_link != blank and section.settings.button_text != blank %}
            <a href="{{ section.settings.button_link }}" class="pdp-button">{{ section.settings.button_text }}</a>
        {% endif %}
    </div>
</section>
<style>
    #{{ section.id }}.pdp-rich-text {
        padding: {{ section.settings.section_top_spacing }}px 0 {{ section.settings.section_bottom_spacing }}px 0;
    }
    @media screen and (max-width: 767px) {
        #{{ section.id }}.pdp-rich-text {
            padding: {{ section.settings.section_top_spacing_mobile }}px 0 {{ section.settings.section_bottom_spacing_mobile }}px 0;
        }
    }
</style>
{% schema %}
{
    "name": "PDP Rich Text",
    "settings": [
        {
            "type": "text",
            "id": "section_id",
            "label": "Section ID"
        },
        {
            "type": "range",
            "id": "section_top_spacing",
            "label": "Section top spacing(Desktop)",
            "min": 0,
            "max": 50,
            "step": 1,
            "default": 20,
            "unit": "px"
        },
        {
            "type": "range",
            "id": "section_bottom_spacing",
            "label": "Section bottom spacing(Desktop)",
            "min": 0,
            "max": 50,
            "step": 1,
            "default": 20,
            "unit": "px"
        },
        {
            "type": "range",
            "id": "section_top_spacing_mobile",
            "label": "Section top spacing(Mobile)",
            "min": 0,
            "max": 30,
            "step": 1,
            "default": 20,
            "unit": "px"
        },
        {
            "type": "range",
            "id": "section_bottom_spacing_mobile",
            "label": "Section bottom spacing(Mobile)",
            "min": 0,
            "max": 30,
            "step": 1,
            "default": 20,
            "unit": "px"
        },
        {
            "type": "select",
            "id": "alignment",
            "label": "Text alignment",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "right",
                    "label": "Right"
                },
                {
                    "value": "center",
                    "label": "Center"
                }
            ],
            "default": "center"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "richtext",
            "id": "subtitle",
            "label": "Subtitle"
        },
        {
            "type": "richtext",
            "id": "content",
            "label": "Content"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Learn More"
        }
    ],
    "presets": [
        {
            "name": "PDP Rich Text"
        }
    ]
}
{% endschema %}
