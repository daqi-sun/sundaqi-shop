{{ "xmas-wish-fulfilled.css" | asset_url | stylesheet_tag }}
<div id="player"></div>
<div class="video-section">
    <div class="video-container">
        <div class="embed-container">
            <iframe class="yt-iframe" src="https://www.youtube-nocookie.com/embed/{{ section.settings.video.id }}?autoplay=1&mute=1" title="Youtube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
    </div>
</div>

<div class="wish-steps-section">
    <div class="section-container">
        <div class="section-heading-wrapper" id="most-popular-products">
          <h3 class="title-h3 color-white gotham-bold text-center">
            {{ section.settings.heading }}
          </h3>
          <p class="gotham-book color-white text-center">{{ section.settings.subtitle }}</p>
        </div>
        <div class="wishlist-steps-container">
            {% for block in section.blocks %}
                <div class="steps-container">
                    {% if block.settings.heading_image == blank %}
                    <h2 class="wishlist-heading gotham-bold">{{ block.settings.heading }}</h2>
                    {% else %}
                    <img src="{{ block.settings.heading_image | img_url: 'master' }}" alt="">
                {% endif %}
                    <p class="gotham-book color-white text-center">{{ block.settings.content }}</p>

                </div>
            {% endfor %}
        </div>
      </div>
</div>

{% schema %}
{
    "name": "Xmas-Wishlist",
    "max_blocks": 7,
    "settings": [
        {
            "type": "video_url",
            "id": "video",
            "label": "Add link of a video",
            "accept": ["youtube", "vimeo"],
            "placeholder": "Video Link"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Section Heading",
            "default": "Get Your Wish Fulfilled By Ecoflow ",
            "placeholder": "Section Heading"
        },
        {
            "type": "text",
            "id": "subtitle",
            "label": "Sub Title",
            "default": "On the day of Christmas, we will choose one winner from each site and fulfill your wish!! (price limited to 1225â‚¬).",
            "info": "Sub Title",
            "placeholder": "Sub Title"
        }
    ],
    "blocks": [
        {
            "type": "steps",
            "name": "Wishlist Steps",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "heading_image",
                    "label": "Heading Image"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Steps Heading",
                    "default": "1",
                    "placeholder": "Steps Heading"
                },
                {
                    "type": "textarea",
                    "id": "content",
                    "label": "Content",
                    "default": "Contents"
                }
            ]
        }
    ]
}

{% endschema %}