              </svg>
            {% when 2 %}
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="59.208"
                height="29.07"
                viewBox="0 0 59.208 29.07"
              >
                <g transform="translate(-938.245 -7170.752)"><g transform="translate(938.245 7172.021)"><path d="M173.929,34.053a16.877,16.877,0,0,0,0-18.122,1.276,1.276,0,1,0-2.151,1.372,14.324,14.324,0,0,1,0,15.377,1.276,1.276,0,1,0,2.15,1.373" transform="translate(-124.589 -11.726)" fill="#30d745"/><path d="M200.527,25.929a24.114,24.114,0,0,0,0-25.326,1.276,1.276,0,0,0-2.17,1.343,21.559,21.559,0,0,1,0,22.64,1.276,1.276,0,1,0,2.169,1.343" transform="translate(-144.912 0)" fill="#30d745"/><path d="M147.356,42.124a9.64,9.64,0,0,0-.063-10.866,1.276,1.276,0,0,0-2.1,1.453,7.086,7.086,0,0,1,.046,7.985,1.276,1.276,0,1,0,2.114,1.428" transform="translate(-104.252 -23.47)" fill="#30d745"/><path d="M33.222,24.993A14.264,14.264,0,0,1,35.46,17.3a1.275,1.275,0,0,0-2.15-1.373,16.875,16.875,0,0,0,0,18.122,1.276,1.276,0,1,0,2.15-1.373,14.263,14.263,0,0,1-2.238-7.688" transform="translate(-23.442 -11.727)" fill="#30d745"/><path d="M5.349,26.342a1.277,1.277,0,0,0,.413-1.756,21.56,21.56,0,0,1,0-22.64A1.276,1.276,0,0,0,3.592.6a24.113,24.113,0,0,0,0,25.325,1.275,1.275,0,0,0,1.756.413" transform="translate(0 0)" fill="#30d745"/><path d="M64.758,42.468A1.277,1.277,0,0,0,65.1,40.7a7.086,7.086,0,0,1,.046-7.985,1.276,1.276,0,0,0-1.046-2,1.3,1.3,0,0,0-.231.021,1.267,1.267,0,0,0-.82.529,9.639,9.639,0,0,0-.063,10.866,1.275,1.275,0,0,0,1.771.343" transform="translate(-46.883 -23.471)" fill="#30d745"/><rect width="52.658" height="26.534" transform="translate(6.549 0)" fill="none"/></g><path d="M29.892-42.239,23.72-29.561H32L15.359-13.168l6.815-12.556H15.359Z" transform="translate(944.792 7212.991)" fill="#30d745"/></g>
              </svg>
            {% when 3 %}
              <svg
                xmlns="http://www.w3.org/2000/svg"
                xmlns:xlink="http://www.w3.org/1999/xlink"
                width="39.103"
                height="34.961"
                viewBox="0 0 39.103 34.961"
              >
                <defs><clipPath id="disaster-b"><rect width="39.103" height="34.961" fill="none" stroke="#4798eb" stroke-width="2"/></clipPath></defs><g clip-path="url(#disaster-b)"><path d="M36.889,20.948V13.013a1.566,1.566,0,0,0-1.565-1.565H32.782V22.514h2.541A1.566,1.566,0,0,0,36.889,20.948Z" transform="translate(1.43 0.499)" fill="none" stroke="#4798eb" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/><path d="M12.525,29.159h-7.6A4.175,4.175,0,0,1,.75,24.984V9.512A4.175,4.175,0,0,1,4.924,5.338h7.791" transform="translate(0.033 0.233)" fill="none" stroke="#4798eb" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/><path d="M24.437,5.337h4.981a4.175,4.175,0,0,1,4.174,4.174V24.983a4.175,4.175,0,0,1-4.174,4.174H14.227" transform="translate(0.621 0.233)" fill="none" stroke="#4798eb" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/><path d="M14.413.75H27.092l-6.34,12.928H27.2L10.667,34.146,15.9,18.281H7.168Z" transform="translate(0.313 0.033)" fill="none" stroke="#4798eb" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/></g>
              </svg>
          {% endcase %}
        </div>
        <div>{{ block.settings.title }}</div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Disaster Learn More",
  "settings": [
    {
      "type": "html",
      "id": "title",
      "label": "Title",
      "default": "What Are The Causes Of Power Outages?"
    },
    {
      "type": "richtext",
      "id": "richtext",
      "label": "Richtext"
    },
    {
      "type": "text",
      "id": "url",
      "label": "Learn more URL"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button text",
      "default": "Learn more"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image Mobile"
    },
    {
      "type": "text",
      "id": "url2",
      "label": "Image URL"
    }
  ],
  "max_blocks": 3,
  "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Expandable Capacity"
        }
      ]
    }
  ]
}
{% endschema %}
