<div class="disaster-learn-more">
  <h2 class="disaster-blue-heading">{{ section.settings.title }}</h2>
  <div class="disaster-subheading">{{ section.settings.richtext }}</div>
  {% if section.settings.btn_text != blank %}
    <a class="disaster-cta" href="{{ section.settings.url }}">
      {{- section.settings.btn_text -}}
    </a>
  {% endif %}

  <a
    href="{{ section.settings.url2 }}"
    class="disaster-learn-more-image-wrapper"
  >
    {% render 'ht-responsive-image',
      image: section.settings.image,
      image_mobile: section.settings.image_mobile
    %}
  </a>

  <div class="disaster-learn-more-grid">
    {% for block in section.blocks %}
      <div class="dlm-item {% if forloop.last %} dlm-item-last{% endif %}">
        <div class="dlm-svg-wrapper">
          {% case forloop.index %}
            {% when 1 %}
              <svg
                xmlns="http://www.w3.org/2000/svg"
                xmlns:xlink="http://www.w3.org/1999/xlink"
                width="40.019"
                height="40"
                viewBox="0 0 40.019 40"
              >
