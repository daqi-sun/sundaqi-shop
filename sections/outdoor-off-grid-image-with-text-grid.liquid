<div id="scroll-section" class="outdoor-grid__section-wrapper">
  <div class="outdoor-grid__image-with-text-grid">
    <div class="outdoor-grid__heading-wrap">
      <div class="outdoor-grid__heading">
        <span>{{ section.settings.heading }}</span>
      </div>
      <div class="outdoor-grid__subheading">
        <span>{{ section.settings.subheading }}</span>
      </div>
    </div>
    <div class="outdoor-grid__image-blocks">
      {% for block in section.blocks %}
        <div class="outdoor-grid__image-items">
          <img src="{{ block.settings.image_grid_desktop | img_url: '850x' }}" alt="">
        </div>
      {% endfor %}
    </div>
    {% comment %} <div class="swiper swiper__outdoor-grid"> <div class="swiper-wrapper swiper__grid-mobile"> {% for block in section.blocks %} <div class="swiper-slide swiper-slide__image-grid--mobile"> <img src="{{ block.settings.image_grid_mobile | img_url: '1550x' }}" alt=""> </div> {% endfor %} </div> </div> {% endcomment %}
    <div class="swiper-block outdoor-grid__image--mobile">
      <div class="swiper-container">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide swiper-slide__image-grid--mobile" id="swiper-slide__image-grid--mobile">
              <img src="{{ block.settings.image_grid_mobile | img_url: '1550x' }}" alt="">
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.swiper-container', {
      slidesPerView: 'auto',
      cssMode: true,
    });
  });
</script>

{% schema %}
{
  "name": "Image grid Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "html",
      "id": "subheading",
      "label": "Subheading"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Grid image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_grid_desktop",
          "label": "Image Grid Desktop"
        },
        {
          "type": "image_picker",
          "id": "image_grid_mobile",
          "label": "Image Grid Mobile"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with Text Grid"
    }
  ]
}
{% endschema %}
