<div class="star-page-title-section section-{{ section.id }}" id="{{ section.settings.section_id }}" style="background-color: {{ section.settings.section_background }};">
  <div class="star-page-container">
      <div class="star-page-title-wrapper">

          {% if section.settings.banner_title != blank %}
            <div class="title icon--{{ section.settings.icon_position }}">
              {% if section.settings.banner_title_icon != blank and section.settings.icon_position == 'before' %}
                <img loading="lazy" srcset="{{ section.settings.banner_title_icon | img_url: 'small' | replace: '_small', '' }}" />
              {% endif %}
              <span {% if section.settings.banner_title_m != blank %}class="hideMobile"{% endif %}>{{ section.settings.banner_title }}</span>
              {% if section.settings.banner_title_m != blank %}<span class="hideDesktop">{{ section.settings.banner_title_m }}</span>{% endif %}
              {% if section.settings.banner_title_icon != blank and section.settings.icon_position == 'after' %}
                <img loading="lazy" srcset="{{ section.settings.banner_title_icon | img_url: 'small' | replace: '_small', '' }}" />
              {% endif %}
            </div>
          {% endif %}

      </div>
      {% if section.settings.banner_top_title != blank %}
        {% if section.settings.banner_top_title_m != blank %}<div class="hideMobile">{% endif %}
        <div class="subtitle">{{ section.settings.banner_top_title }}</div>
        {% if section.settings.banner_top_title_m != blank %}</div>{% endif %}
        {% if section.settings.banner_top_title_m != blank %}
          <div class="hideDesktop">
          <div class="subtitle">{{ section.settings.banner_top_title_m }}</div>
          </div>
        {% endif %}
      {% endif %}

  </div>
</div>

<style>
  .section-{{ section.id }}{
      padding: {{ section.settings.section_top_space }}px 0 {{ section.settings.section_bottom_space }}px 0;
  }
  .section-{{ section.id }} .title, .section-{{ section.id }} .ends_in{ font-size: {{ section.settings.banner_title_font_size }}px; }
  .section-{{ section.id }} .subtitle{ font-size: {{ section.settings.banner_top_title_font_size }}px; }
  .section-{{ section.id }}, .section-{{ section.id }} .title{ color: {{ section.settings.text_color }}; }
  .section-{{ section.id }} .subtitle{ color: {{ section.settings.subtitle_text_color }}; }
  .section-{{ section.id }} .star-page-title-wrapper img{ width: {{ section.settings.icon_width }}px; margin-right: {{ section.settings.icon_space_right }}px; }

  @media screen and (max-width: 749px){
      .section-{{ section.id }}{
          padding: {{ section.settings.section_top_space_m }}px 0 {{ section.settings.section_bottom_space_m }}px 0;
      }
      .section-{{ section.id }} .title{ font-size: {{ section.settings.banner_title_font_size_m }}px; }
      .section-{{ section.id }} .subtitle{ font-size: {{ section.settings.banner_top_title_font_size_m }}px; }
      .section-{{ section.id }} .star-page-title-wrapper img{ width: {{ section.settings.icon_width_m }}px; margin-right: {{ section.settings.icon_space_right_m }}px; }
  }
</style>

