<div class="camping-rv-grid__section">
  <div class="container--normal ">
    <div class="display--desktop">
      <div class="camping-rv-grid__container">
        <div class="camping-rv-grid__text-container hb__text--center camping-rv-grid__block-item">
          {% assign image = section.settings.image_mobile %}
          {% assign pt = 1 | divided_by: image.aspect_ratio | times: 100 %}
          <div
            class="custom-img__wrapper display--mobile"
            style="padding-top: {{ pt }}%;"
          >
            <img
              class="custom-img hb__border-radius--8"
              srcset="
                {{ image | img_url: '500x' }} 500w,
                {{ image | img_url: '600x' }} 600w,
                {{ image | img_url: 'master' }} 700w,
              "
              alt="{{ image.alt }}"
            >
          </div>
          <div class="camping-rv-grid__image--overlay "></div>

          {% assign image = section.settings.image %}
          {% assign pt = 1 | divided_by: image.aspect_ratio | times: 100 %}
          <div
            class="custom-img__wrapper display--desktop"
            style="padding-top: {{ pt }}%;"
          >
            <img
              class="custom-img hb__border-radius--8"
              srcset="
                {{ image | img_url: '1000x' }} 1000w,
                {{ image | img_url: '1200x' }} 1200w,
                {{ image | img_url: '1400x' }} 1400w,
                {{ image | img_url: 'master' }} 1600w,
              "
              alt="{{ image.alt }}"
              loading="lazy"
            >
            <div class="camping-rv-grid__image--overlay"></div>
          </div>
          <div class="camping-rv-grid__heading__container">
            {% if section.settings.title != blank %}
              <h2 class="camping-rv-grid__heading hb__text--heading hb__text--white">
                {{ section.settings.title }}
              </h2>
            {% endif %}
            {% if section.settings.description != blank %}
              <p class="camping-rv-grid__subheading hb__text--description hb__text--white">
                {{ section.settings.description }}
              </p>
            {% endif %}
          </div>
        </div>
        {% for block in section.blocks %}
          {%- comment %}<locksmith:e57f>{% endcomment -%}
            {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: block.settings.product, subject_parent: section, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
          {%- comment %}</locksmith:e57f>{% endcomment -%}
          {% liquid
            assign product = block.settings.product
            if block.settings.image != blank
              assign productImage = block.settings.image
            else
              assign productImage = product.featured_image
            endif
            if block.settings.title != blank
              assign productTitle = block.settings.title
            else
              assign productTitle = product.title
            endif
            assign productSubtitle = block.settings.subtitle
            assign productDescription = block.settings.description
            if block.settings.product_url != blank
              assign productUrl = block.settings.product_url
            else
              assign productUrl = product.url
            endif
          %}
          <div class="swiper-slide camping-rv-grid__block-container background--white camping-rv-grid__block-item">
            <div class="camping-rv-grid__image__wrapper ">
              <a href="{{ productUrl }}" target="_blank">
                <img
                  class="camping-rv-grid__image"
                  loading="lazy"
                  src="{{ productImage | img_url: 'master' }}"
                  alt="{{ productImage.alt }}"
                >
              </a>
            </div>
            <div class="camping-rv-grid__content">
              <h3 class="camping-rv-grid__title hb__text--subheading hb__text--black">
                {{ productTitle }}
              </h3>
              <p class="camping-rv-grid__subtitle hb__text--blue ">{{ productSubtitle }}</p>
              <p class="camping-rv-grid__description hb__text--description hb__text--black">{{ productDescription }}</p>
            </div>
            <a class="btn--container" href="{{ productUrl }}" target="_blank">
              <div class="camping-rv-grid__btn hb__btn hb__text--white background--blue">
                {{ section.settings.button_text }}
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="display--mobile">
      <div class="camping-rv-grid__text-container hb__text--center">
        {% assign image = section.settings.image_mobile %}
        {% assign pt = 1 | divided_by: image.aspect_ratio | times: 100 %}
        <div
          class="custom-img__wrapper display--mobile"
          style="padding-top: {{ pt }}%;"
        >
          <img
            class="custom-img hb__border-radius--8"
            srcset="
              {{ image | img_url: '500x' }} 500w,
              {{ image | img_url: '600x' }} 600w,
              {{ image | img_url: 'master' }} 700w,
            "
            alt="{{ image.alt }}"
          >
        </div>
        <div class="camping-rv-grid__image--overlay "></div>

        {% assign image = section.settings.image %}
        {% assign pt = 1 | divided_by: image.aspect_ratio | times: 100 %}
        <div
          class="custom-img__wrapper display--desktop"
          style="padding-top: {{ pt }}%;"
        >
          <img
            class="custom-img hb__border-radius--8"
            srcset="
              {{ image | img_url: '1000x' }} 1000w,
              {{ image | img_url: '1200x' }} 1200w,
              {{ image | img_url: '1400x' }} 1400w,
              {{ image | img_url: 'master' }} 1600w,
            "
            alt="{{ image.alt }}"
            loading="lazy"
          >
          <div class="camping-rv-grid__image--overlay"></div>
        </div>
        <div class="camping-rv-grid__heading__container">
          {% if section.settings.title != blank %}
            <h2 class="camping-rv-grid__heading hb__text--heading hb__text--white">
              {{ section.settings.title }}
            </h2>
          {% endif %}
          {% if section.settings.description != blank %}
            <p class="camping-rv-grid__subheading hb__text--description hb__text--white">
              {{ section.settings.description }}
            </p>
          {% endif %}
        </div>
      </div>
      <div class="swiper-container camping-rv-grid__product__wrapper">
        <div class="swiper-wrapper camping-rv-grid__flex-container">
          {% for block in section.blocks %}
            {%- comment %}<locksmith:ad00>{% endcomment -%}
              {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: block.settings.product, subject_parent: section, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
            {%- comment %}</locksmith:ad00>{% endcomment -%}
            {% liquid
              assign product = block.settings.product
              if block.settings.image != blank
                assign productImage = block.settings.image
              else
                assign productImage = product.featured_image
              endif
              if block.settings.title != blank
                assign productTitle = block.settings.title
              else
                assign productTitle = product.title
              endif
              assign productSubtitle = block.settings.subtitle
              assign productDescription = block.settings.description
              if block.settings.product_url != blank
                assign productUrl = block.settings.product_url
              else
                assign productUrl = product.url
              endif
            %}
            <div class="swiper-slide camping-rv-grid__block-container background--white">
              <div class="camping-rv-grid__image__wrapper ">
                <a href="{{ productUrl }}" target="_blank">
                  <img
                    class="camping-rv-grid__image"
                    loading="lazy"
                    src="{{ productImage | img_url: 'master' }}"
                    alt="{{ productImage.alt }}"
                  >
                </a>
              </div>
              <div class="camping-rv-grid__content">
                <h3 class="camping-rv-grid__title hb__text--subheading">
                  {{ productTitle }}
                </h3>
                <p class="camping-rv-grid__subtitle hb__text--blue ">{{ productSubtitle }}</p>
                <p class="camping-rv-grid__description hb__text--description">{{ productDescription }}</p>
              </div>
              <a class="btn--container" href="{{ productUrl }}" target="_blank">
                <div class="camping-rv-grid__btn hb__btn hb__text--white background--blue">
                  {{ section.settings.button_text }}
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Camping RV grid",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section Image Desktop"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Section Image Mobile"
    },
    {
      "type": "html",
      "id": "title",
      "label": "Title",
      "default": "Vom Stromspeicher zum kompletten Solar-Ökosystem"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Jetzt kaufen"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Le panneau solaire EcoFlow rigide 400W"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Die solide Lösung für Ihr Zuhause."
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Die EcoFlow DELTA Pro ist der perfekte Stromspeicher für alle, die den Einstieg in die Welt der Solarenergie wagen wollen. Mit 1-3 kWh erweiterbarer Kapazität ist sie perfekt dafür geeignet, unsere wichtigen Haushaltsgeräte bei Bedarf mit Energie zu versorgen. Angst vor einem Stromausfall gehört damit der Vergangenheit an. Die EcoFlow DELTA Pro versorgt 90 % unserer Haushaltsgeräte und lädt innerhalb von 50 Minuten um 80 % auf. Die Bedienung ist besonders einfach: Eine praktische App hilft uns dabei, den Überblick zu behalten."
        },
        {
          "type": "url",
          "id": "product_url",
          "label": "Product Url"
        }
      ]
    }
  ]
}
{% endschema %}
