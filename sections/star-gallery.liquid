{% if section.blocks.size > 0 %}
    <div class="star-page-container">
        <div class="star-images-gallery">
            {% for block in section.blocks %}
                <div class="star-images-gallery-item item-{{ block.settings.image_width }} mobile-item-{{ block.settings.image_width_m }}">
                    {% if block.settings.link != blank %}<a href="{{ block.settings.link }}">{% endif %}
                    <div class="star-images-gallery-item-image">
                        <img srcset="{{ block.settings.image | img_url: 'master' }}" class="hideMobile" loading="lazy" alt="" />
                        {% unless block.settings.hide_image_in_mobile %}
                            <img srcset="{{ block.settings.image_m | img_url: 'master' }}" class="hideDesktop" loading="lazy" alt="" />
                        {% endunless %}
                    </div>
                    {% if block.settings.content != blank %}
                    <div class="star-images-gallery-item-content {% unless block.settings.show_text_in_mobile %}hideMobile{% endunless %}">
                        {{ block.settings.content }}
                    </div>
                    {% endif %}
                    {% if block.settings.link != blank %}</a>{% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}

{% schema %}
  {
    "name": "Star_images",
    "settings": [

    ],
    "blocks": [
        {
            "type": "image",
            "name": "Image",
            "settings": [
                {
                    "type": "select",
                    "id": "image_width",
                    "label": "Image width",
                    "options": [
                        { "value": "full", "label": "Full" },
                        { "value": "half", "label": "Half" },
                        { "value": "one-third", "label": "One third" }
                    ]
                },
                {
                    "type": "select",
                    "id": "image_width_m",
                    "label": "Image width(Mobile)",
                    "options": [
                        { "value": "full", "label": "Full" },
                        { "value": "half", "label": "Half" },
                        { "value": "one-third", "label": "One third" }
                    ]
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "checkbox",
                    "id": "hide_image_in_mobile",
                    "label": "Hide image in mobile"
                },
                {
                    "type": "image_picker",
                    "id": "image_m",
                    "label": "Image(Mobile)"
                },
                {
                    "type": "textarea",
                    "id": "content",
                    "label": "Content"
                },
                {
                    "type": "checkbox",
                    "id": "show_text_in_mobile",
                    "label": "Show content in mobile"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Star_images",
            "category":"Custom Sections"
        }
    ]
  }
{% endschema %}