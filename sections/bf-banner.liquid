<script>
  // bf banner section settings will pass to below js file
  var bfbannerSettingJsons = {{ section.settings | json }};
</script>
{{ 'subscription-form-common.js' | asset_url | script_tag }}
<script src="{{ 'bf-banner-alpine.js' | asset_url }}"></script>

<div data-section-id="{{ section.id }}" class="fade-in-animation bf-banner">
  <div class='slideshow-section-wrapper'>
    <div id="SlideshowWrapper-{{ section.id }}" class="slideshow-wrapper" role="region" aria-label="slideshow" aria-describedby="slideshow-info" tabindex="-1" data-slider>
      <div class="slideshow"
           id="Slideshow-{{ section.id }}"
           data-slider-container
           >
        {%- assign block_image = section.settings.image -%}
        {%- assign block_mobile_image = section.settings.mobile_image -%}

        {% assign videoSlide = false %}
        {% if section.settings.banner_type == 'video' %}
          {% assign videoSlide = true %}
        {% endif %}

        <div id="slickSlide-{{ section.id }}"
             class=" slideshow__slide slideshow__slide--active slideshow__slide--{{ section.id }}
                    block_type__{{section.settings.banner_type}}
                    {% if videoSlide %} video-section  {% endif %}"
             >

            {% if videoSlide %}

              {% assign html5_video_url = section.settings.html5_video_url %}
              {% assign video_url = section.settings.youtube_video_url %}
              {% assign mobile_html5_video_url = section.settings.html5_video_url_m %}

              {%- if html5_video_url != blank or video_url != blank -%}
              <div class="video-section-wrapper
                          video-background-wrapper
                          video-section-wrapper--{{ section.id }}"
                 >
                <div class="slideshow__overlay video__overlay" id='slideshow__overlay_{{section.id}}'></div>

                {%- if video_url != blank -%}
                  <div id="Video-{{ section.id }}"
                       class="video video--background slideshow_video"
                       data-id="{{ video_url.id }}"
                       data-type="background"></div>
                {% elsif html5_video_url != blank %}
                  <video  id="VideoModal_{{section.id}}" muted  loop  webkit-playsinline playsinline {% if forloop.first %}  autoplay {% endif %} class='slideshow_video {% if mobile_html5_video_url != blank %}hideMobile{% endif %}'>
                    <source src="{{html5_video_url}}" type="video/mp4">
                  </video>
                {% endif %}
                {% if mobile_html5_video_url != blank %}
                  <video  id="mobile_VideoModal_{{section.id}}" muted  loop  webkit-playsinline playsinline {% if forloop.first %}  autoplay {% endif %} class='slideshow_video hideDesktop'>
                    <source src="{{mobile_html5_video_url}}" type="video/mp4">
                  </video>
                {% endif %}
              </div>
              {%- else -%}
              <div class="placeholder-noblocks">
                {{ 'homepage.onboarding.no_content' | t }}
              </div>
              {%- endif -%}

            {% else %}

              {% if block_image == blank %}
              <div class="slideshow__image">
                <div class="placeholder-background">
                  {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                  {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
               <div class="slideshow__overlay" id='slideshow__overlay_{{section.id}}'></div>
              </div>
              {% else %}
              <div class="{% if block_mobile_image != blank %}hideMobile{% endif %} slideshow__image_wrapper">
                <img
                     class="slideshow__image box"
                     srcset="{{ block_image | img_url: 'small' | replace: '_small', '' }}"
                     sizes="auto"
                     loading="lazy"
                     aria-label="{{ block_image.alt | default: block.settings.slide_title }}"
                     alt="{{ block_image.alt | default: block.settings.slide_title  }}"
                     >

              <div class="slideshow__overlay" id='slideshow__overlay_{{section.id}}'></div>
              </div>

              {% if block_mobile_image != blank %}
              <div class=" slideshow__image_wrapper hideDesktop">
                <img
                     class="slideshow__image box"
                     srcset="{{ block_mobile_image | img_url: 'small' | replace: '_small', '' }}"
                     sizes="auto"
                     loading="lazy"
                     aria-label="{{ block_mobile_image.alt | default: block.settings.slide_title }}"
                     alt="{{ block_mobile_image.alt | default: block.settings.slide_title }}"
                     >

                <div class="slideshow__overlay" id='slideshow__overlay_{{section.id}}'></div>
              </div>
              {% endif %}
              <noscript>
                <div class="slideshow__image"{% if block_image %}{% unless block_image.alt == blank %} role="img" aria-label="{{ block_image.alt | escape }}"{% endunless %} style="background-image: url('{{ block_image | img_url: '2048x' }}'); background-position: {{ block.settings.alignment }};"{% endif %}>
                  {% if block_image == blank %}
                  <div class="placeholder-background">
                    {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                  {% endif %}
                </div>
              </noscript>
              {% endif %}
            {% endif %}

            <div class="slideshow__text-wrap slideshow__text-wrap--desktop">
              <div class="slideshow__text-content {% if section.settings.center_content %}center-content{% endif %}" style="{%- if section.settings.center_content or section.blocks.size > 0 -%} max-width: 1248px; {%- if section.settings.center_content %}text-align: center;{%- endif -%} {%- endif -%}">
                  <div class="slideshow_text_wrapper" {%- if section.settings.center_content or section.blocks.size > 0 -%} style="max-width: 1248px;" {%- endif -%}>
                    <div class="text-content-mobile-top">
                      {%- unless section.settings.banner_top_title == blank -%}
                      <li class="mega-subtitle slideshow__top__subtitle">
                          {{ section.settings.banner_top_title }}
                      </li>
                      {%- endunless -%}
                      {%- unless section.settings.banner_title == blank -%}
                        <li>
                          <h2 class="h1 mega-title slideshow__title">
                            {{ section.settings.banner_title }}
                          </h2>
                        </li>
                      {%- endunless -%}
                      {%- unless section.settings.banner_bottom_title == blank -%}
                        <li class="mega-subtitle slideshow__bottom__subtitle">
                            {{ section.settings.banner_bottom_title }}
                        </li>
                      {%- endunless -%}
                      {% if section.settings.btn_text != blank %}
                        <li class="slideshow__button">
                          <a href="{{ section.settings.btn_link }}" class="btn">
                            {{ section.settings.btn_text }}
                          </a>
                        </li>
                      {% endif %}
                    {% if section.settings.form_position_mobile == 'bottom' %}
                    </div>
                    <div class="text-content-mobile-bottom">
                    {% endif %}
                      {% if section.settings.show_klaviyo_form and section.settings.klaviyo_id != blank %}
                        <li class="slideshow__klaviyo-form">
                          {% if section.settings.klaviyo_text != blank %}<div class="klaviyo-form-text">{{ section.settings.klaviyo_text }}</div>{% endif %}
                          <form id="klaviyo_signup" class="klaviyo_signup klaviyo_gdpr_embed_{{ section.settings.klaviyo_id }}" action="//manage.kmail-lists.com/subscriptions/subscribe" data-ajax-submit="//manage.kmail-lists.com/ajax/subscriptions/subscribe" method="GET" target="_blank" novalidate="novalidate">
                              <input type="hidden" name="g" value="{{ section.settings.klaviyo_id }}">
                              <input type="hidden" name="$fields" value="$consent">
                              <input type="hidden" name="$list_fields" value="$consent">
                              <div class="klaviyo_form_fields">
                                  <div class="klaviyo_field_group">
                                      <input class="form__input" type="email" value="" name="email" id="k_id_email" placeholder="{{ section.settings.klaviyo_email_placeholder }}" />
                                      <div class="klaviyo_form_actions"><button type="submit" class="btn klaviyo_submit_button">Submit</button></div>
                                  </div>
                              </div>
                              <div class="klaviyo_messages">
                                  <div class="success_message" style="display:none;">
                                      {% if section.settings.klaviyo_success_text != blank %}{{ section.settings.klaviyo_success_text }}{% endif %}
                                  </div>
                                  <div class="error_message" style="display:none;"></div>
                                </div>
                                {% if section.settings.klaviyo_form_bottom_line != blank %}
                                  <div class="klaviyo_bottom_line">{{ section.settings.klaviyo_form_bottom_line }}</div>
                                {% endif %}
                          </form>

                          <script type="text/javascript">
                              KlaviyoSubscribe.attachToForms('#klaviyo_signup', {
                                  hide_form_on_success: true{% if section.settings.klaviyo_success_text != blank %}, custom_success_message: true{% endif %}
                              });
                          </script>

                          {% if section.settings.klaviyo_popup_content != blank %}
                            <div class="klaviyo_popup_content hide">
                              <div class="klaviyo_popup_inner">
                                <div class="close_popup">
                                  <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                                  <rect width="40" height="40" rx="20" fill="black" fill-opacity="0.3"></rect>
                                  <path fill-rule="evenodd" clip-rule="evenodd" d="M18.8684 19.9995L13.3091 25.5588L14.4405 26.6902L19.9998 21.1309L25.5591 26.6902L26.6905 25.5588L21.1311 19.9995L26.6905 14.4402L25.5591 13.3088L19.9998 18.8682L14.4405 13.3088L13.3091 14.4402L18.8684 19.9995Z" fill="white"></path>
                                  </svg>
                                </div>
                                <div style="clear:both;"></div>
                                <div class="klaviyo_popup_text">{{ section.settings.klaviyo_popup_content }}</div>
                              </div>
                            </div>
                          {% endif %}
                        </li>
                      {% endif %}
                      {% if section.settings.show_emarsys_form %}
                        <li class="slideshow__klaviyo-form slideshow__emarsys-form emarsys__form" x-data="bfBanner">
                          {% if section.settings.emarsys_form_text != blank %}<div class="klaviyo-form-text">{{ section.settings.emarsys_form_text }}</div>{% endif %}
                          <div
                            class="ls-solution-banner__form klaviyo_signup"
                            style="margin-top: 13px"
                          >
                            <div class="klaviyo_field_group contact-form">
                                <input
                                    type="email"
                                    name="inp_3"
                                    maxlength="255"
                                    value="{{ inp_3 }}"
                                    placeholder="{{ section.settings.email_placeholder_text }}"
                                    class="Form__Input form__input"
                                    required
                                    x-model="email"
                                >
                                <div class="input-group__btn-wrapper klaviyo_form_actions">
                                    <button
                                        aria-label="Submit"
                                        tabindex="993"
                                        type="button"
                                        name="submit1"
                                        class="btn klaviyo_submit_button"
                                        @click="submitResult"
                                    >
                                      <span x-text="loading ? 'Loading...' : '{{ section.settings.form_btn_text | default: 'Subscribe' }}'"></span>
                                    </button>
                                </div>
                            </div>
                            <div class="success_message text--white" style="margin-top:10px;" x-show="isSuccess">{{ section.settings.success_message }}</div>
                            {% comment %} <div class="blank-email-error" style="display:none;">Email: missing data!</div> {% endcomment %}
                            <div class="invalid-email-error" style="color: {{ section.settings.form_error_msg_color }}" x-text="errMsg" x-show="errMsg !== ''"></div>
                          </div>
                          {% comment %} Disclaimer {% endcomment %}
                          <div class="bf-banner__disclaimer-wrapper">
                            <label
                              class="bf-banner__disclaimer"
                              style="color: {{ section.settings.disclaimer_text_color }}; --text-color: {{ section.settings.disclaimer_text_color }}"
                              for="bf_banner_disclaimer"
                            >
                              <span>
                                {{ section.settings.disclaimer_text }}
                              </span>
                              <input
                                type="checkbox"
                                :value="checked"
                                class="bf-banner__disclaimer-checkbox"
                                name="disclaimer"
                                id="bf_banner_disclaimer"
                                x-model="checked"
                              >
                              <span class="checkmark"></span>
                            </label>
                          </div>
                        </li>
                      {% endif %}
                      {% if section.settings.show_coundown and section.settings.timer_end_date != blank %}
                        <div class="countdown_wrapper custom_countdown" data-countdown-end-date="{{ section.settings.timer_end_date }}">
                          {% if section.settings.timer_text != blank %}<div class="ends_in">{{ section.settings.timer_text }}</div>{% endif %}
                          <div class="star_countdown">
                              {%- if section.settings.show_flash_sale -%}
                                <style>
                                  .star-page-banner .countdown_wrapper {
                                    margin-top: 10px;
                                  }
                                  .bf-flash-ct-image {
                                    max-width: 100%;
                                    width: 62px;
                                    height: auto;
                                    font-family: 'Helvetica Neue ForEco';
                                    font-weight: 700;
                                  }
                                  .bf-flash-ct-days {
                                    position: absolute;
                                    left: 50%;
                                    transform: translateX(-50%);
                                    font-size: 15px; /* 16px */
                                    bottom: 25.5%;
                                  }
                                  .bf-flash-ct-hours {
                                    position: absolute;
                                    left: 50%;
                                    transform: translateX(-50%);
                                    font-size: 14px;
                                    bottom: 32%;
                                  }
                                  @media (min-width: 768px) {
                                    .bf-flash-ct-image {
                                      width: 106px;
                                    }
                                    .bf-flash-ct-days {
                                      font-size: 20px;
                                      bottom: 28.5%;
                                    }
                                    .bf-flash-ct-hours {
                                      font-size: 18px;
                                      bottom: 31%;
                                    }
                                  }
                                  @media screen and (max-width: 749px) {
                                    .star_countdown .block {
                                      width: 36px;
                                      height: 36px;
                                      font-size: 22px;
                                    }
                                    .star-page-banner .countdown_wrapper .star_countdown .countdown_text {
                                      font-size: 8px;
                                    }
                                  }
                                  @media screen and (max-width: 1023px) {
                                    .star-page-banner .countdown_wrapper .star_countdown {
                                      justify-content: center;
                                    }
                                  }
                                </style>
                                <div style="color: #FFDB59;" data-bf-flash-sales>
                                  {% if section.settings.flash_sale_img_days != blank %}
                                  <div data-bf-days style="position: relative;">
                                    {{ section.settings.flash_sale_img_days | image_url: width: 200 | image_tag: class: 'bf-flash-ct-image' }}
                                  </div>
                                  {% endif %}
                                  {% if section.settings.flash_sale_img_hours != blank %}
                                  <div data-bf-hours style="position: relative;">
                                    {{ section.settings.flash_sale_img_hours | image_url: width: 200 | image_tag: class: 'bf-flash-ct-image' }}
                                  </div>
                                  {% endif %}
                                </div>
                              {%- endif -%}
                              <div class="days">
                                  <div><div class="block days_num"></div><div class="countdown_text">Days</div></div>
                                  <div class="dots">:</div>
                              </div>
                              <div class="hours">
                                  <div><div class="block hours_num"></div><div class="countdown_text">Hours</div></div>
                                  <div class="dots">:</div>
                              </div>
                              <div class="mins">
                                  <div><div class="block mins_num"></div><div class="countdown_text">Minutes</div></div>
                                  <div class="dots">:</div>
                              </div>
                              <div class="sec">
                                  <div><div class="block sec_num"></div><div class="countdown_text">Seconds</div></div>
                              </div>
                          </div>
                        </div>
                      {% endif %}

                      {%- if section.blocks.size > 0 -%}
                        <style>
                          .bf-ct-swiper.swiper {
                            padding: 0 20px;
                            --swiper-navigation-color: white;
                            --swiper-navigation-size: 16px;
                            margin-top: 20px;
                          }
                          @media (min-width: 768px) {
                            .bf-ct-swiper.swiper .swiper-wrapper{
                              justify-content: center;
                            }
                          }
                          .bf-ct-swiper .swiper-slide {
                            overflow: hidden;
                            border-radius: 6px;
                            background: linear-gradient(144deg, rgba(199, 203, 211, 0.90) -0.37%, rgba(220, 224, 234, 0.90) 14.15%, rgba(232, 233, 237, 0.90) 34.94%, rgba(255, 255, 255, 0.90) 58.54%, rgba(224, 227, 236, 0.90) 81.8%);
                          }
                          .bf-ct-swiper-image {
                            width: 155px;
                            height: auto;
                          }
                          .bf-ct-product-title {
                            color: black;
                            font-size: 16px;
                            font-weight: 500;
                            margin-bottom: 15px;
                            height: var(--product-title-height);
                          }
                          .bf-ct-product-price {
                            font-size: 24px;
                            font-weight: 500;
                            color: black;
                          }
                          .bf-ct-product-compare-price {
                            text-decoration: line-through;
                            font-weight: 500;
                            font-size: 16px;
                            color: #666;
                          }
                          .bf-ct-product-price-wrapper {
                            display: flex;
                            align-items: baseline;
                            gap: 5px;
                            justify-content: center;
                            line-height: 1;
                          }
                          @media (min-width: 768px) {
                            .swiper-button-prev,
                            .swiper-button-next {
                              display: none;
                            }
                            .bf-ct-swiper-image {
                              width: 183px;
                            }
                          }
                        </style>
                        <div class="swiper bf-ct-swiper" style="color: white;">
                          <div class="swiper-wrapper">
                            {% assign currency_symbol = cart.currency.symbol %}
                            {%- for block in section.blocks -%}
                              {%- comment %}<locksmith:5490>{% endcomment -%}
                                {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: block.settings.product, subject_parent: section, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
                              {%- comment %}</locksmith:5490>{% endcomment -%}
                              {% if block.settings.product != blank %}
                                {%- assign product = block.settings.product -%}
                                {% assign current_variant = product.first_available_variant %}
                              {% endif %}
                              <div class="swiper-slide">
                                <div class="star_product_block" style="padding: 0; text-align: center;">
                                {% if block.settings.image != blank %}
                                  {{ block.settings.image | image_url: width: 200 | image_tag: class: 'bf-ct-swiper-image' }}
                                {% endif %}
                                  <div class="bf-ct-product-title">{{ block.settings.title | default: product.title }}</div>

                                  {% assign price = 0 %}
                                  {% assign discount_price = 0 %}
                                  {% assign compare_price = 0 %}
                                  {% if block.settings.price == '' %}
                                      {% assign price = current_variant.price | money_without_trailing_zeros | replace: currency_symbol, '' | replace: ',', '' %}
                                      {% assign shown_price = current_variant.price | money_without_trailing_zeros | replace: ',', '' %}
                                  {% else %}
                                      {% assign price = block.settings.price | replace: currency_symbol, '' %}
                                      {% assign shown_price = block.settings.price %}
                                  {% endif %}

                                  {% if block.settings.compare_price == '' %}
                                      {% assign compare_price = current_variant.compare_at_price | money_without_trailing_zeros | replace: currency_symbol, '' | replace: ',', '' %}
                                      {% assign shown_compare_price = current_variant.compare_at_price | money_without_trailing_zeros | replace: ',', '' %}
                                  {% else %}
                                      {% assign compare_price = block.settings.compare_price | replace: currency_symbol, '' %}
                                      {% assign shown_compare_price = block.settings.compare_price %}
                                  {% endif %}

                                  {% assign discount_price = compare_price | minus: price %}
                                  {% assign discount_percentage = price | times: 100 | divided_by: compare_price %}
                                  {% assign discount_percentage = 100 | minus: discount_percentage | round %}

                                  <div class="bf-ct-product-price-wrapper">
                                    <div class="bf-ct-product-price">{{ block.settings.only_text }} {{ shown_price }}</div>
                                    <div class="bf-ct-product-compare-price">{{ shown_compare_price }}</div>
                                  </div>

                                  {% if section.settings.discount_badge_type == 'absolute' or section.settings.discount_badge_type == 'percentage'%}
                                      <div class="discount_tag_wrapper">
                                          {% if discount_price > 0 or block.settings.discount_text != '' %}{% if section.settings.discount_badge_image != blank %}<img loading="lazy" srcset="{{ section.settings.discount_badge_image | img_url: 'small' | replace: '_small', '' }}" />{% endif %}{% endif %}
                                          <div class="discount_tag_text">
                                              {% if block.settings.discount_text == '' %}
                                                  {% if section.settings.discount_badge_type == 'absolute' and discount_price > 0 %}
                                                      {{ section.settings.discount_text | default: 'SAVE' }}<span>${{ discount_price }}</span>
                                                  {% elsif section.settings.discount_badge_type == 'percentage' and discount_price > 0 %}
                                                      <span>{{ discount_percentage }}%</span>{{ section.settings.discount_text | default: 'OFF' }}
                                                  {% endif %}
                                              {% else %}
                                                  {{ block.settings.discount_text }}
                                              {% endif %}
                                          </div>
                                      </div>
                                  {% endif %}

                                  <div class="star-product-info-wrapper text-align-center mobile-text-align-center" style="width: 100%; padding: 20px 0;">
                                    <div class="star_product_buttons"
                                      style="--section-button-width: 180px; --section-button-width-mobile: 180px;
                                      align-items: center; margin: 0;"
                                    >
                                      {%- assign amazon_url = block.settings.amazon_url -%}
                                      {%- if amazon_url == blank -%}
                                        {% assign star_variant = block.settings.product.selected_or_first_available_variant.id %}
                                        {% if block.settings.product_variant_id != blank %}
                                            {% assign star_variant = block.settings.product_variant_id %}
                                        {% endif %}
                                          <a href="" data-variant-id="{{ star_variant }}" class="atcButton star_btn button_1 atc_link"
                                            style="color: #ffffff; background-color: #3f68e0; margin-left: 0; margin-bottom: 0;"
                                          >
                                            {{ block.settings.buy_now_btn_text }}
                                          </a>
