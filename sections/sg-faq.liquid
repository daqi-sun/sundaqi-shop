<style>
  .sg-faq__section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media (min-width: 768px) {
    .sg-faq__section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    }
  }
</style>

<div
  class="sg-faq__section sg-faq__section-{{ section.id }}"
  data-id="_{{ section.settings.id | downcase | remove: ' ' | replace: '&', '-' }}"
>
  <div class="container--default">
    <h2 class="sg-faq__heading text--heading text--white">
      {{ section.settings.title }}
    </h2>

    <div class="sg-faq__container">
      {% for block in section.blocks %}
        <div class="sg-faq__wrapper">
          <div class="sg-faq__question-wrapper">
            <h3 class="sg-faq__question text--white">
              {{ block.settings.title }}
            </h3>
            <svg xmlns="http://www.w3.org/2000/svg" width="19" height="19" viewBox="0 0 19 19" fill="none">
              <rect y="7.7002" width="18.7" height="3.3" fill="#D9D9D9"/>
              <rect class="arrow-temp" x="11" width="18.7" height="3.3" transform="rotate(90 11 0)" fill="#D9D9D9"/>
            </svg>
          </div>
          <div class="sg-faq__answer">
            {{ block.settings.answer }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<script>
  $('.sg-faq__question-wrapper').click(function () {
    $(this).toggleClass('open');
    $(this).siblings('.sg-faq__answer').slideToggle();
  });
</script>

{% schema %}
{
  "name": "SG FAQ",
  "settings": [
    {
      "type": "text",
      "id": "id",
      "label": "Section ID",
      "default": "FAQ"
    },
    {
      "type": "html",
      "id": "title",
      "label": "Title",
      "default": "Letâ€™s Answer Your Questions"
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top Desktop",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top Mobile",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom Desktop",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom Mobile",
      "default": 50
    }
  ],
  "blocks": [
    {
      "type": "question",
      "name": "Question",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Question",
          "default": "What is a rigid solar panel?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "label",
          "default": "<p>Our rigid solar panels are made from highly efficient monocrystalline solar cells that convert up to 23% of solar into usable energy. The cells are protected by a robust, anti-corrosive aluminum frame, making them perfect for outdoor use.</p>"
        }
      ]
    }
  ]
}
{% endschema %}
