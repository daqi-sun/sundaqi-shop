          "type": "image_picker",
          "id": "image",
          "label": "Grid Image Desktop"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Grid Image Mobile"
        },
        {
          "type": "html",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#000000"
        },
        {
          "type": "select",
          "id": "text_align",
          "label": "Text Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        },
        {
          "type": "select",
          "id": "text_size",
          "label": "Text Size",
          "options": [
            {
              "value": "default",
              "label": "Default"
            },
            {
              "value": "small",
              "label": "Small"
            }
          ],
          "default": "default"
        }
      ]
    },
    {
      "type": "grid_wide",
      "name": "Grid Wide",
      "limit": 1,
      "settings": [
