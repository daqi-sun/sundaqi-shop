<style>
  .pp-grid__section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }



  @media (min-width: 768px) {
    .pp-grid__section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_desktop }}px;
      padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
    }
  }
</style>

<div class="pp-grid__section pp-grid__section-{{ section.id }}">
  <div class="container--default">
    <div class="pp-grid__container">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'grid' %}
            <div class="pp-grid__item pp-grid__item--default pp-grid__item__item--{{ forloop.index }} pp-grid__item--{{ block.id }}">
              <img
                class="display--desktop"
                src="{{ block.settings.image | img_url: 'master' }}"
                alt="{{ block.settings.image.alt }}"
              >
              <img
                class="display--mobile"
                src="{{ block.settings.image_mobile | img_url: 'master' }}"
                alt="{{ block.settings.image_mobile.alt }}"
              >

              <h3
                class="pp-grid__item-heading {% if block.settings.text_align == 'left' %} text--left {% elsif block.settings.text_align == 'center' %} text--center {% else %} text--right {% endif %} {% if block.settings.text_size == 'default' %} text--default {% else %} text--small {% endif %}"
                style="color:{{ block.settings.text_color }};"
              >
                {{ block.settings.title }}
              </h3>
            </div>
          {% when 'grid_wide' %}
            <div class="pp-grid__item pp-grid__item--wide pp-grid__item__item--{{ forloop.index }} pp-grid__item--{{ block.id }}">
              <img
                class="display--desktop"
                src="{{ block.settings.image | img_url: 'master' }}"
                alt="{{ block.settings.image.alt }}"
              >
              <img
                class="display--mobile"
                src="{{ block.settings.image_mobile | img_url: 'master' }}"
                alt="{{ block.settings.image_mobile.alt }}"
              >
              <h3
                class="pp-grid__item-heading {% if block.settings.text_align == 'left' %} text--left {% elsif block.settings.text_align == 'center' %} text--center {% else %} text--right {% endif %} {% if block.settings.text_size == 'default' %} text--default {% else %} text--small {% endif %}"
                style="color:{{ block.settings.text_color }};"
              >
                {{ block.settings.title }}
              </h3>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

